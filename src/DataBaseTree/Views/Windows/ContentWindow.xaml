<Window x:Class="DBManager.Application.Views.Windows.ContentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:general="clr-namespace:DBManager.Application.ViewModels.General"
        xmlns:convertors="clr-namespace:DBManager.Application.Convertors"
        xmlns:behaviors="clr-namespace:DBManager.Application.Behaviors"
        xmlns:utils="clr-namespace:DBManager.Application.Utils"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=general:WindowViewModelBase}"
        ResizeMode="NoResize"
        WindowStyle="None"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        BorderThickness="1"
        BorderBrush="{StaticResource BasicBorderBrush}"
        Background="{StaticResource ModalBackgroundBrush}"
        Title="{Binding Header}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <utils:SharedResourceDictionary Source="pack://application:,,,/Views/Templates/ConenctionWindowTemplate.xaml" />
                <utils:SharedResourceDictionary Source="pack://application:,,,/Views/Templates/DataGenerationConfigurationWindowTemplate.xaml" />
        </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <DockPanel>
        <DockPanel DockPanel.Dock="Top"
                   Background="Transparent"
                   Height="25"
                   LastChildFill="True">

            <TextBlock Margin="10,0,0,0"
                       Text="{Binding Header}"
                       Foreground="White"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center" />

            <Button HorizontalAlignment="Right"
                    Visibility="{Binding CanUserCloseWindow,Converter={convertors:BooleanToVisibilityConverter}}"
                    Command="{Binding CloseCommand}"
                    Width="25" />

            <i:Interaction.Behaviors>
                <behaviors:WindowDragBehaviour />
            </i:Interaction.Behaviors>
        </DockPanel>

        <Border DockPanel.Dock="Top"
                BorderBrush="{StaticResource AccentLowBrush}"
                BorderThickness="0,1,0,0" />

        <ContentPresenter Content="{Binding}" />
    </DockPanel>
</Window>
